    <style>
        .metro-container {
            width: 100%;
            display: flex;
            justify-content: center;
        }

        .metro-line {
            position: relative;
            height: 100%;
            padding: 10px 0;
            transform: rotate(90deg);
        }

        .station {
            position: relative;
            height: 60px;
        }

        .circle {
            position: absolute;
            top: 50%;
            left: 0;
            width: 10px;
            height: 10px;
            background-color: #fff;
            border: 3px solid blue;
            border-radius: 50%;
            transform: translate(-50%, -50%);
        }

            .circle::after {
                content: "";
                position: absolute;
                top: 100%;
                left: 50%;
                height: 60px;
                width: 2px;
                background-color: green;
                transform: translateX(-50%);
            }

        .label {
            position: absolute;
            left: 20px;
            top: 50%;
            transform: translateY(-50%);
            font-family: Verdana, sans-serif;
            font-size: 14px;
            transform: rotate(-0.05turn);
        }

        .station:last-child .circle::after {
            display: none;
        }
    </style>
</head>
